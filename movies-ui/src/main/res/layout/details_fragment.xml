<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="detailsViewModel"
            type="com.enaz.movies.ui.details.DetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/item_highlight_default"
        android:paddingLeft="@dimen/padding_16"
        android:paddingTop="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/movie_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_500"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholderImage="@drawable/image_place_holder"
                app:progressBarImage="@drawable/progress_animation" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/track_name_details"
                style="@style/Font.Medium.Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@{detailsViewModel.movieItem.trackName}"
                android:textColor="@color/color_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movie_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/primary_genre"
                style="@style/Font.Medium.Black"
                android:layout_width="@dimen/layout_width_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@{detailsViewModel.movieItem.primaryGenreName}"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/track_name_details" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/track_price"
                style="@style/Font.Small.Red"
                android:layout_width="@dimen/layout_width_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@{detailsViewModel.price()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/primary_genre" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/track_release_date"
                style="@style/Font.Medium.PrimaryDark"
                android:layout_width="@dimen/layout_width_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:textColor="@color/color_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/track_price"
                tools:text="@{detailsViewModel.releaseDate()}"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sypnosis_label"
                style="@style/Font.Medium.PrimaryDark"
                android:layout_width="@dimen/layout_width_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/sypnosis_label"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/track_release_date" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/track_description"
                style="@style/Font.Small.Black"
                android:layout_width="@dimen/layout_width_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:paddingBottom="@dimen/padding_16"
                android:text="@{detailsViewModel.movieItem.longDescription}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sypnosis_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
