<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Font.Small.Accent" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Font.Small.DarkGray" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Font.Small.PrimaryDark" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Font.Small.PrimaryDark.Bold" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Font.Small.Red" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/arial</item>
